@model EmployeeMGT.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12 border-bottom">
            <h2 class="text-primary">Add Employee</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmployeeFirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmployeeFirstName" class="form-control" />
                    <span asp-validation-for="EmployeeFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmployeeLastName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmployeeLastName" class="form-control" />
                    <span asp-validation-for="EmployeeLastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmployeeDateOfBirth"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmployeeDateOfBirth" class="form-control" />
                    <span asp-validation-for="EmployeeDateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmployeeDepartment"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmployeeDepartment" class="form-control" />
                    <span asp-validation-for="EmployeeDepartment" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4  ">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <br />
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
